// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String
  superuser Boolean     @default(false)
  createdAt DateTime    @default(now())
  Registers Registers[]
}

model Registers {
  id           Int      @id @default(autoincrement())
  title        String
  longitude    String
  latitude     String
  user         Users    @relation(fields: [userId], references: [id])
  userId       Int
  specie       Species  @relation(fields: [specieId], references: [id])
  specieId     Int
  observations String?
  createdAt    DateTime @default(now())
}

model Species {
  id                     Int           @id @default(autoincrement())
  cientificName          String        @unique
  generalCharacteristics String
  curiosities            String?
  leafMorfology          String
  flowerMorfology        String
  fruitMorfology         String?
  undergroundMorfology   String?
  leafPicturePath        String
  flowerPicturePath      String
  fruitPicturePath       String?
  undergroundPicturePath String?
  edibleParts            String
  createdAt              DateTime      @default(now())
  Registers              Registers[]
  CommonNames            CommonNames[]
}

model CommonNames {
  id       Int     @id @default(autoincrement())
  name     String
  specie   Species @relation(fields: [specieId], references: [id])
  specieId Int
}
